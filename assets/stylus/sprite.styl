/*
Stylus variables are information about icon's compiled state, stored under its original file name

.icon-home {
  width: $icon_home_width;
}

The large array-like variables contain all information about a single icon
$icon_home = x y offset_x offset_y width height total_width total_height image_path;
*/
$numberOne_x = 0px;
$numberOne_y = 0px;
$numberOne_offset_x = 0px;
$numberOne_offset_y = 0px;
$numberOne_width = 64px;
$numberOne_height = 64px;
$numberOne_total_width = 64px;
$numberOne_total_height = 128px;
$numberOne_image = '/img/sprite.png';
$numberOne = 0px 0px 0px 0px 64px 64px 64px 128px '/img/sprite.png';
$numberTwo_x = 0px;
$numberTwo_y = 64px;
$numberTwo_offset_x = 0px;
$numberTwo_offset_y = -64px;
$numberTwo_width = 64px;
$numberTwo_height = 64px;
$numberTwo_total_width = 64px;
$numberTwo_total_height = 128px;
$numberTwo_image = '/img/sprite.png';
$numberTwo = 0px 64px 0px -64px 64px 64px 64px 128px '/img/sprite.png';

/*
The provided mixins are intended to be used with the array-like variables

.icon-home {
  spriteWidth($icon_home)
}

.icon-email {
  sprite($icon_email)
}
*/
spriteWidth($sprite) {
  width: $sprite[4];
}

spriteHeight($sprite) {
  height: $sprite[5];
}

spritePosition($sprite) {
  background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
  background-image: url($sprite[8]);
}

sprite($sprite) {
  spriteImage($sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}
